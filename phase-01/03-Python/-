# Solution

tmp = []

with open("product_sales.csv", 'r') as sales, \
     open("product_summary.txt", 'w') as summmary:

    is_header = True
    for line in sales:
        if is_header:
            is_header = False
            continue

        line = line.strip()
        if not line:
            continue

        TotalSale = 0.0

        parts = line.split(',')

        product_name = parts[0]
        quantity_sold = int(parts[1])
        unit_price = float(parts[2])

        if tmp[0] is product_name:
        tmp.append({
           'Product': product_name,
           'QuantitySold': quantity_sold,
           'UnitPrice': unit_price,
        })
